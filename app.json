{
  "expo": {
    "name": "MBTA Transit",
    "slug": "mbta-transit-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/MBTA.svg.png",
    "scheme": "mbtatransitapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/MBTA.svg.png",
      "resizeMode": "contain",
      "backgroundColor": "#1C345F"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mbtatransitapp",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses your location to show nearby transit stops and real-time arrivals.",
        "NSCameraUsageDescription": "This app uses your camera for AR indoor navigation to show directional arrows.",
        "NSMotionUsageDescription": "This app uses motion sensors for compass-based navigation."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/MBTA.svg.png",
        "backgroundColor": "#FFFFFF"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.mbtatransitapp",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "HIGH_SAMPLING_RATE_SENSORS"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyDDUbpTJuhbQM4v3UgjG-nTwuuSjzpwQ9o"
        }
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow MBTA Transit to use your camera for AR navigation."
        }
      ],
      [
        "expo-sensors",
        {
          "motionPermission": "Allow MBTA Transit to access motion sensors for compass navigation."
        }
      ],
      "expo-sqlite"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}